<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.Archismat</item>
    </style>

    <style name="ActionBar.Solid.Archismat" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/archismat_sunrise</item>
    </style>

    <style name="ArchismatTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Archismat.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.V14.Archismat.NoTitle</item>
    </style>

    <!-- Settings activity action bar styles -->
    <style name="ActionBar.V14.Archismat.NoTitle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/archismat_sunrise</item>
        <item name="android:height">56dp</item>
    </style>

    <style name="ActionBar.Solid.Archismat.NoTitle" parent="ActionBar.Solid.Archismat">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/archismat_logo</item>
    </style>
</resources>